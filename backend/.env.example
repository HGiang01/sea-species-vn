# Environment Setup
# Set to 'production' when deploying to a live server
NODE_ENV=development

# Server Configuration
PORT=3000
MAX_FILE_SIZE_OF_IMG=5 # Unit: MB

# Session & Security
# IMPORTANT: Change this to a long, random, and complex string for security
JWT_SECRET=your_super_secret_jwt_key_here

# PostgreSQL Database
# Default settings for local development
PG_USERNAME=postgres
PG_PASSWORD=your_local_db_password
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=sea_species

# Database Table Names
# Keep these values consistent with your database schema or migration files
PG_SPECIES_TB=species
PG_IMAGES_TB=images
PG_POINTS_TB=points
PG_ADMIN_TB=admin
PG_BLACKLIST_TB=blacklisted_tokens

# Cloudinary Storage
# Obtain these credentials from your Cloudinary Dashboard
CLOUDINARY_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET_KEY=your_api_secret
CLOUDINARY_FOLDER=ocean-species